<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aaaaaa"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ImageButton_Speech"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="100" >

            <TextView
                android:layout_weight="60"
                android:id="@+id/notetitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
          
                android:background="#999999"
                android:gravity="center"
                android:text="@string/newFileName"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/imageButton_spech"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="20"
                android:background="@android:color/transparent"
                android:src="@drawable/a_tts" />

            <ImageButton
                android:id="@+id/imageButton_menu"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="20"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/a_menu22" />

        </LinearLayout>

    </LinearLayout>
	<ScrollView  
		android:id="@+id/scroll"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fadingEdge="none">
		<EditText 
			class="org.paulmach.textedit.pmTextEdit$CustomEditText"
			android:id="@+id/note"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="@android:color/white"
			android:padding="5dip"
			android:fadingEdge="none"
			android:scrollbars="vertical|horizontal"
			android:gravity="top"
			android:autoText="true"
			android:textColor="#ffffff"
			android:capitalize="sentences"
			android:cursorVisible="true"
			android:textCursorDrawable="@android:color/background_light"
			
			/>
	</ScrollView>
</LinearLayout>